{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_POSITION_INDEPENDENT_CODE": "ON",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
                "CMAKE_TOOLCHAIN_FILE": "C:/projects/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug (vcpkg)",
            "inherits": "base",
            "description": "Debug build using vcpkg and Ninja generator",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release (vcpkg)",
            "inherits": "base",
            "description": "Release build using vcpkg and Ninja generator",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug",
            "description": "Build Bobby�s Burden in Debug mode",
            "jobs": 8
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release",
            "description": "Build Bobby�s Burden in Release mode",
            "jobs": 8
        }
    ]
}
